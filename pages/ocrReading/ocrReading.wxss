/* pages/ocrReading/ocrReading.wxss */

.suspension{
  display: block;
  width: 40px;
  word-wrap: break-word;
  background-color: seashell;
  padding: 5px;
  text-align: center;
  opacity: 0.5;
  border: azure solid 2px;
  text-shadow: -1px -1px 1px rgb(235, 107, 107);
  border-radius: 50%;
  font-family: "楷体";
}

.tobottom{
  position: fixed;
  top: 0px;
  right: 3px;
}

.totop{
  position: fixed;
  bottom: 0px;
  right: 5px;
}

.title-name{
  padding: 3px;
  display: block;
  margin: 0 auto;
  color: '#A52A2A';
  font: bold;
  font-size: 20px;
  font-family: "楷体";
  offset-distance: 2px;
  margin-top: 5px;
  color: #ccc;          /*设置字体的颜色为灰色*/
  text-shadow: -1px -1px 1px #000, 1px 1px 3px #fff;
}

.imgBox{
  display: block;
  width: 100%;
  height: 100px;
}

.content{
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  padding: 2px;
  border: double  2px #DCDCDC;
  border-radius: 10px;
  width: 95%;
  box-sizing: border-box;
}

.btn-box{
  width: 100%;
  margin-bottom: 5px;
  display: flex;
  justify-content: space-between;
}

.btn-seletor{
  /* width: 100%; */
  /* margin-bottom: 5px; */
  display: flex;
  flex-direction: row-reverse;
  border-bottom: #DCDCDC solid 1px;
  box-sizing: border-box;
}

.btn{
  font-family: "黑体";
  padding: 3px;
  border: #BDB76B solid 1px;
  box-sizing: border-box;
  color: '#A52A2A';
  margin: 3px;
}

.btn .transform{
  display: flex;
  justify-self: unset;
  align-self: unset;
  align-content: unset;
  position: absolute;
  left: 0px;
  justify-self: left;
}

.line{
  width: 100%;
  /* height:300px; */
  display: flex;
  margin-bottom: 3px;
  background-color: rgb(247, 247, 241);
  border-bottom: burlywood double 3px;
  line-height: normal;
  flex-wrap: wrap;
}

.words-unseletor{
  display: flex;
  flex-wrap: wrap;
  padding: 3px;
  margin: 3px;
  border: #BDB76B solid 1px;
  color: black;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-shadow: 0 0 0 1px rgba(240, 65, 65, 0.3) inset;
}

.words-seletor{
  display: flex;
  flex-wrap: wrap;
  padding: 3px;
  margin: 3px;
  border: #BDB76B solid 1px;
  color: black;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-shadow: 0 0 0 1px hsla(240,0%,100%,.3) inset;
}



